{
  "title": "Payments & Refunds Funnel",
  "uid": "payments-refunds-funnel",
  "version": 1,
  "schemaVersion": 38,
  "refresh": "30s",
  "tags": ["payments", "refunds", "orders"],
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "type": "stat",
      "title": "Payment Success Rate (5m)",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        { "expr": "payments:success_rate_5m", "refId": "A" }
      ],
      "options": {
        "colorMode": "value",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "textMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "percentage",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "yellow", "value": 0.85 },
              { "color": "green", "value": 0.9 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Payment Fail Rate (5m)",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "targets": [
        { "expr": "payments:fail_rate_5m", "refId": "A" }
      ],
      "options": {
        "colorMode": "value",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "textMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "percentage",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 0.05 },
              { "color": "red", "value": 0.1 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Refund Success Rate (5m)",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "targets": [
        { "expr": "refunds:success_rate_5m", "refId": "A" }
      ],
      "options": {
        "colorMode": "value",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "textMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "percentage",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "yellow", "value": 0.75 },
              { "color": "green", "value": 0.85 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Payment Volume (success+fail) - 5m rate",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        { "expr": "payments:volume_5m", "refId": "A" },
        { "expr": "sum(rate(orders_payment_fail_count_total[5m]))", "refId": "B", "legendFormat": "fail" }
      ],
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] }
    },
    {
      "type": "timeseries",
      "title": "Order Funnel (created / cancelled / delivered)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "targets": [
        { "expr": "orders:created_rate_5m", "refId": "A", "legendFormat": "created" },
        { "expr": "orders:cancelled_rate_5m", "refId": "B", "legendFormat": "cancelled" },
        { "expr": "orders:delivered_rate_5m", "refId": "C", "legendFormat": "delivered" }
      ],
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] }
    },
    {
      "type": "timeseries",
      "title": "Refund Requests vs Refunded",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        { "expr": "sum(rate(orders_refund_request_count_total[5m]))", "refId": "A", "legendFormat": "refund requested" },
        { "expr": "sum(rate(orders_refunded_count_total[5m]))", "refId": "B", "legendFormat": "refunded" }
      ],
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] }
    },
    {
      "type": "timeseries",
      "title": "Payment Pending & Fail Counts",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "targets": [
        { "expr": "sum(rate(orders_payment_pending_count_total[5m]))", "refId": "A", "legendFormat": "pending" },
        { "expr": "sum(rate(orders_payment_fail_count_total[5m]))", "refId": "B", "legendFormat": "fail" }
      ],
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] }
    }
  ],
  "templating": {
    "list": [
      {
        "type": "datasource",
        "name": "DS_PROMETHEUS",
        "query": "prometheus",
        "current": { "text": "Prometheus", "value": "Prometheus" }
      }
    ]
  }
}

